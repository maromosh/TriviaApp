<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaAppClean.Views.LoginView"
             Title="LoginView">
    <VerticalStackLayout Margin="5">
        <Label 
            Text="Enter email"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Placeholder="Type Email here..." Text="{Binding EmaiLogin}"></Entry>
        
        
        <Label 
            Text="Enter password"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />   

        <Entry Placeholder="Type Location Here..." Text="{Binding PasswordLogin}" Margin="5"></Entry>

        <Button Text="Submit" Command="{Binding LoginCommand}" Margin="5"></Button>

        <Button Text="Go To SignUp" Command="{Binding SignUpCommand}" Margin="5"></Button>

    </VerticalStackLayout>
</ContentPage>